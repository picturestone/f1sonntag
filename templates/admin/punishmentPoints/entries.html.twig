{% extends 'adminbase.html.twig' %}

{% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}

{% block body %}
<div class="container-xl">
    <h1>Teilnehmerliste bearbeiten - {{ race.name}} - {{ season.name }}</h1>

    {% set formId = 'raceResultForm' %}

    {{ form_start(form, {
        'method': 'POST',
        'attr': { 'id': formId }
    }) }}
    {{ form_end(form, {render_rest: false}) }}

    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
            <tr>
                <th scope="col">Vorname</th>
                <th scope="col">Nachname</th>
                <th scope="col">Teilnehmer</th>
            </tr>
            </thead>

            <tbody>
            {% for entry in entries %}
                <tr>
                    <td>
                        <span>{{ entry.user.firstName }}</span>
                    </td>
                    <td>
                        <span>{{ entry.user.lastName }}</span>
                    </td>
                    <td>
                        {{ form_widget(form[entry.user.id], {
                            'attr': {
                                'form': formId
                            }
                        }) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {{ form_row(form['_token'], {
        'attr': {
            'form': formId
        }
    }) }}

    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" href="{{ path('app_admin_punishment_points' with {'id': race.id}) }}">
            Zur√ºck
        </a>

        {{ form_widget(form['submit'], {
            'attr': {
                'form': formId
            }
        }) }}
    </div>
</div>
{% endblock %}
