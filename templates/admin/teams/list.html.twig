{% extends 'adminbase.html.twig' %}

{% block body %}
<div class="container-xl">
    <h1>Teams</h1>

    <div>
        <a class="btn btn-primary" href="{{ path('app_teams_new') }}">Hinzuf√ºgen</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-sm align-middle">
            <thead>
                <tr>
                    <th class="col--icon-button" scope="col"></th>
                    <th class="col--icon-button" scope="col"></th>
                    <th scope="col">Name</th>
                </tr>
            </thead>

            <tbody>
                {% for team in teams %}
                    <tr>
                        <td class="col--icon-button">
                            <a class="btn btn-danger" href="{{ path('app_teams_delete', {id: team.id}) }}">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                        <td class="col--icon-button">
                            <a class="btn btn-primary" href="{{ path('app_teams_edit', {id: team.id}) }}">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                        <td>
                            <span>{{ team.name }}</span>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
