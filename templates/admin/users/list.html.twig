{% extends 'adminbase.html.twig' %}

{% block body %}
<div class="container-xl">
    <h1>Benutzer</h1>

    <div>
        <a class="btn btn-primary" href="{{ path('app_admin_users_new') }}">Hinzuf√ºgen</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-sm align-middle">
            <thead>
                <tr>
                    <th class="col--icon-button" scope="col"></th>
                    <th class="col--icon-button" scope="col"></th>
                    <th class="col--icon-button" scope="col"></th>
                    <th scope="col">Vorname</th>
                    <th scope="col">Nachname</th>
                    <th scope="col">E-Mail</th>
                    <th scope="col">Ist Administrator</th>
                </tr>
            </thead>

            <tbody>
                {% for user in users %}
                    <tr>
                        <td class="col--icon-button">
                            <a class="btn btn-danger" href="{{ path('app_admin_users_delete', {id: user.id}) }}">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                        <td class="col--icon-button">
                            <a class="btn btn-primary" href="{{ path('app_admin_users_edit', {id: user.id}) }}">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                        <td class="col--icon-button">
                            <a class="btn btn-secondary" href="{{ path('app_admin_users_change_password', {id: user.id}) }}">
                                <i class="bi bi-lock"></i>
                            </a>
                        </td>
                        <td>
                            <span>{{ user.firstName }}</span>
                        </td>
                        <td>
                            <span>{{ user.lastName }}</span>
                        </td>
                        <td>
                            <span>{{ user.email }}</span>
                        </td>
                        <td>
                            {% include 'includes/isActiveIcon.html.twig' with { 'isActive': ROLE_ADMIN in user.roles } %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
