{% if id|default('') %}
    {% set labelId = id ~ '-label' %}

    <div class="modal fade" id="{{ id }}" tabindex="-1" aria-labelledby="{{ labelId }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="{{ labelId }}">{{ titleText|default('') }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    {{ bodyHtml }}
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="button" class="btn btn-error">{{ deleteText|default('LÃ¶schen') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endif %}
