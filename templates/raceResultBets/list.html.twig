{% extends 'userbase.html.twig' %}

{% block body %}
<div class="container-xl">
    <h1>Rennübersicht - {{ season.name }}</h1>

    <p>Rennen für die Saison "{{ season.name }}"</p>

    <div class="table-responsive">
        <table class="table table-hover table-sm align-middle">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Ort</th>
                    <th scope="col">Datum</th>
                    <th scope="col">Uhrzeit</th>
                    <th class="col--icon-button" scope="col"></th>
                </tr>
            </thead>

            <tbody>
                {% for race in races %}
                    <tr>
                        <td>
                            <span>{{ race.name }}</span>
                        </td>
                        <td>
                            <span>{{ race.place }}</span>
                        </td>
                        <td>
                            <span>{{ race.startDate|date('d.m.Y') }}</span>
                        </td>
                        <td>
                            <span>{{ race.startTime|date('H:i') }}</span>
                        </td>
                        <td>
                            <a class="btn btn-primary" href="{{ path('app_race_result_bets', {id: race.id}) }}">
                                Tipp abgeben
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
